<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logininterface2"
    tools:context=".activity.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="280dp"
        android:padding="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Vui lòng điền email đã đăng ký để lấy lại mật khẩu!"
            android:textSize="26sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/view_back"
            android:textColor="@color/red"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            />
        <EditText
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:id="@+id/fogotpassword_email"
            android:background="@drawable/lavender_border"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:hint="Email"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            />
        <Button
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:text="Lấy lại mật khẩu"
            android:id="@+id/fogotpassword_button"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            app:cornerRadius = "30dp"
            />

    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgotPass_progressBar"
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@color/blue"
        android:outlineSpotShadowColor="@color/pupple"
        android:layout_gravity="center"
        android:visibility="gone"
        />

</LinearLayout>